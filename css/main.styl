rojo = #E72A48
azul = #0C18C4
azulClaro = #01AEF0
body
	font-family 'Yanone Kaffeesatz', sans-serif
	padding-top 70px
	background-color #F6F6F6
	color azulClaro
	.navbar-default
		background-color #0A18C3
		border-bottom 3px solid rojo
		height 70px
		overflow visible
		.navbar-header
			overflow visible
			.navbar-toggle
				border-color transparent
				margin-top 14px
				&:hover
				&:focus
					background-color transparent
				.icon-bar
					background-color white
					height 4px
					width 30px
			.navbar-brand
				background transparent url(./images/logo-galex-mobile.png) no-repeat left top
				color transparent
				height 70px
				margin 12px 0 0 10px
				position relative
				width 110px
				&:hover
				&:focus
				&:active
					color transparent
	.main-banner
		background transparent url(./images/fondo-banner-principal.jpg) no-repeat center top
		background-size cover
		height 400px
		border-bottom 5px solid rojo
		width 100%
	.brands
		border-bottom 5px solid rojo
		padding-bottom 20px
		.block-unity
			padding 0
			margin 20px 0 0		
			a
				img
					width 100%
					height auto
					display block
	.promos-banner
		background transparent url(./images/fondo-experiencia.png) no-repeat center center
		background-size cover
		height 540px
	.place
		background-color rojo
		overflow hidden
		.section-title
			padding 20px 5% 10px 5%
			height auto
			display block
			margin 0 auto
			border-bottom 4px solid azulClaro
			img
				width 100%
		.place-carousel
			.item
				.title
					background rgba(azulClaro,.6)
					color white
					padding 0 5%
					line-height 50px
					height 50px
					margin-top -50px
					font-size 1.1em
				.info
					padding 10px 5%
					color white
					overflow hidden
					.view-more
						float right
						color white
						margin 10px 0
						text-decoration underline
		.find-branches
			background azulClaro url(./images/pin.png) no-repeat left center
			width 90%
			margin 10px auto
			text-align center
			padding 10px 0
			border-radius 3px
			a
				color white
	.newsletter
		.title
			width 90%
			margin 20px auto
			img
				width 100%
				height auto
		form
			width 90%
			margin 0 auto 30px auto
			.form-control
				border 1px solid azulClaro
				color azulClaro
			.btn.btn-primary
				width 100%
				background-color azulClaro
				border-color azulClaro
	.site-footer
		background-color azul
		overflow hidden
		padding 20px 5% 15px 5%
		.logo-footer
			width 100px;
			display block
			margin 0 auto
			img
				width 100%
				height auto
				display block
		.social-links
			padding 0
			margin 0
			text-align center
			padding-top 20px
			li
				display inline-block
				margin-left 10px
				background-color rojo
				width 32px
				height 33px
				a
					width 100%
					height 100%
					display block
					color white
					font-size 2em